<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_secondary20"
    tools:context=".MusicPlayActivity">

    <ImageView
        android:id="@+id/MusicImageView"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        app:srcCompat="@drawable/baseline_music_note_24" />

    <TextView
        android:id="@+id/song_title_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/MusicImageView"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:padding="20dp"
        android:singleLine="true"
        android:text="Title song music"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <SeekBar
        android:id="@+id/sekbar_time_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/song_title_id"
        android:layout_centerInParent="true"
        android:padding="5dp" />

    <Button
        android:id="@+id/button_prev_id"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_below="@id/sekbar_time_id"
       android:layout_alignParentLeft="true"
        android:background="@drawable/navigate_before_icon" />

    <Button
        android:id="@+id/button_next_id"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_below="@id/sekbar_time_id"
        android:layout_alignParentRight="true"
        android:background="@drawable/navigate_next_icon" />

    <Button
        android:id="@+id/button_play_pause_id"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_below="@id/sekbar_time_id"
        android:layout_centerInParent="true"
        android:background="@drawable/baseline_play_circle_24" />




</RelativeLayout>